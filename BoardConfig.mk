BOARD_MKBOOTIMG_ARGS += --vendor_bootconfig $(BOARD_VENDOR_BOOTCONFIG)






# ==================================================
# KERNEL CONFIGURATION - KEEPING YOUR SETUP
# ==================================================

# Kernel - prebuilt
TARGET_FORCE_PREBUILT_KERNEL := true
